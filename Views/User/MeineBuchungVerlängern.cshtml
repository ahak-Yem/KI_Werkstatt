    <form method="post" asp-action="MeineBuchungVerlängern">
        <div class="border p-3 mt-4" style="max-width:400px">
            <div class="row pb-2">
                <h2 class="text" style="color:MintCream">Buchung Verlängern</h2>
                <hr />
            </div>
            <div class="form-floating mb-3">
                <input asp-for="BookingID" class="form-control btn-light" disabled id="floatingInput" placeholder="s0XXXXXX" />
