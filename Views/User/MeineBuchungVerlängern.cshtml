                <label for="floatingInput" asp-for="ResourceID"></label>
                <input asp-for="ResourceID" hidden>
                </input>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="StartDate" class="form-control btn-light" disabled id="floatingInput" placeholder="s0XXXXXX" type="date"/>
                <label for="floatingInput" asp-for="StartDate"></label>
                <input asp-for="StartDate" hidden>
                </input>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="EndDate" class="form-control btn-light " placeholder="s0XXXXXX" type="date" />
                <label for="floatingInput" asp-for="EndDate"></label>
                <input asp-for="EndDate" hidden>
                </input>


            </div>
            <div class="form-floating mb-3">
                <input asp-for="BookingCondition" class="form-control btn-light" disabled id="floatingInput" placeholder="s0XXXXXX" />
                <label for="floatingInput" asp-for="BookingCondition"></label>
                <input asp-for="BookingCondition" hidden />


            </div>

