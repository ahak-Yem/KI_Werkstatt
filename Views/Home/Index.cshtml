﻿@using BookingPlatform.Controllers;
@{
  Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@{
    ViewData["Title"] = "Willkommen bei KI-WERKSTATT";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<div class="wrapper">
    @*<form class="form-signin" style="background-color:#6F8C64">*@
            <form class="form-signin" style="background-color:#ffffff; border-radius: 15px; box-shadow: 0px 2px 8px rgba(223, 221, 221, 1);">
        <div class="p-4">
            <a class="navbar-brand"><img src="~/css/logo/Logo.png" asp-append-version="true" width="260px" Height="70px" /></a>
        </div>
        <br />
        <input type="text" class="form-control" name="MatrNr" placeholder="Benutzername" required="" autofocus="" />
        <br />
        <input type="password" class="form-control" name="Passwort" placeholder="Passwort" required="" />
        @if (LoginController.notAuthorized == true)
        {
            <p style="text-align:left">
              &nbsp  <span class="text-warning" >Falsche Anmeldedaten</span>
            </p>
        }
        <br />
        <br />
        <button class="btn btn-lg btn-success btn-block form-control" type="submit" asp-controller="Login" asp-action="Index">Anmelden</button>
        <br />
        <br />
    </form>
</div>