@model BookingPlatform.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MatrikelNr"  class="control-label"></label>
                <input asp-for="MatrikelNr" class="form-control" />
                <span asp-validation-for="MatrikelNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WarningEmailState" /> @Html.DisplayNameFor(model => model.WarningEmailState)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="BookingCondition" class="control-label"></label>
                <input asp-for="BookingCondition" class="form-control" />
                <span asp-validation-for="BookingCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResourceID" class="control-label"></label>
               @* <select asp-for="ResourceID"  class ="form-control" asp-items="ViewBag.ResourceID"></select>*@
                <input asp-for="ResourceID" class="form-control" asp-items=".ResourceID" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

