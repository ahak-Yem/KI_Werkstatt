@model BookingPlatform.Models.Booking

<div align="center">
    <form method="post" asp-action="Zurückgegeben">
        <div class="border p-3 mt-4" style="max-width:400px">
            <div class="row pb-2">
                <h2 class="text" style="color:MintCream">wurde die Ressource zurückgegeben?</h2>
                <hr />
            </div>
            <div class="form-floating mb-3">
                <input asp-for="BookingID" class="form-control btn-light" disabled id="floatingInput" placeholder="s0XXXXXX" />
                <label for="floatingInput" asp-for="BookingID"></label>
                <input asp-for="BookingID" hidden>
                </input>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="MatrikelNr" class="form-control btn-light" disabled id="floatingInput" placeholder="s0XXXXXX" />
                <label for="floatingInput" asp-for="MatrikelNr"></label>
                <input asp-for="MatrikelNr" hidden>
                </input>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ResourceID" class="form-control btn-light" disabled id="floatingInput" placeholder="s0XXXXXX" />
                <label for="floatingInput" asp-for="ResourceID"></label>
                <input asp-for="ResourceID" hidden>
                </input>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="StartDate" class="form-control btn-light" disabled id="floatingInput" placeholder="s0XXXXXX" type="date" />
                <label for="floatingInput" asp-for="StartDate"></label>
                <input asp-for="StartDate" hidden>
                </input>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="EndDate" class="form-control btn-light" disabled id="floatingInput" placeholder="s0XXXXXX" type="date" />
                <label for="floatingInput" asp-for="EndDate"></label>
                <input asp-for="EndDate" hidden>
                </input>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="BookingCondition" class="form-control btn-light" disabled id="floatingInput" placeholder="s0XXXXXX" />
                <label for="floatingInput" asp-for="BookingCondition"></label>
                <input asp-for="BookingCondition" hidden>

            </div>





            <div style="text-align: center">
                <div class="mb-2">
                    <button type="submit" class="btn btn-lg btn-success" style="width:230px">Ja zurückgegeben</button>
                </div>
                <a asp-controller="BookingManagement" asp-action="Index" class="btn btn-lg btn-outline-light" style="width:230px"> Zurück zur Buchungen</a>
            </div>

        </div>
    </form>
</div>
