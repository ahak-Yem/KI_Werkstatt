<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookingPlatform</title>
    <link rel="stylesheet" href="~/css/bootswaschTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookingPlatform.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/BookingPlatform.styles.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3 mt-1">
  <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="Index"><img src="~/css/logo/Logo.png" asp-append-version="true" width="220px" Height="60px" /></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor03">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Hardware
            <span class="visually-hidden">(current)</span>
          </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Ressources" asp-action="Index">Ressourcen</a>
            </li>
            <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="BookingManagement" asp-action="Index">Buchungen</a>
            </li>
            <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Administrators</a>
        </li>
        
         
      </ul>
    </div>
               

                <div class="collapse navbar-collapse justify-content-end" id="navbarColor03" style="margin-right:40px">
                    <ul class="navbar-nav ">
                       
                         <li class="nav-item dropdown" >
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="bi bi-person-circle"></i> @User.Identity.Name</a>
                        <div class="dropdown-menu">
                        <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="MeineBuchung">Meine Buchungen</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-controller="Home" asp-action="Index1">Logout <i class="bi bi-box-arrow-right"></i></a>
                        </div>
                        </li>
                    </ul>
                </div>
  </div>
</nav>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
